<script type="text/javascript">
    $("#NewPass").prop("disabled", false);
    $("#confirmPass").prop("disabled", false);
    $("#cNombres").prop("disabled", true);
    $("#cApePat").prop("disabled", true);
    $("#cApeMat").prop("disabled", true);

    $(document).on('change', 'input:radio[id^="cambiarContraseña"]', function (event) {
        $("#NewPass").prop("disabled", false);
        $("#confirmPass").prop("disabled", false);
        $("#cNombres").prop("disabled", true);
        $("#cApePat").prop("disabled", true);
        $("#cApeMat").prop("disabled", true);
    });

    $(document).on('change', 'input:radio[id^="cambiarNombre"]', function (event) {
        $("#NewPass").prop("disabled", true);
        $("#confirmPass").prop("disabled", true);
        $("#cNombres").prop("disabled", false);
        $("#cApePat").prop("disabled", false);
        $("#cApeMat").prop("disabled", false);
    });


    jQuery.extend(jQuery.validator.messages, {
        required: "Este campo es obligatorio.",
        remote: "Por favor, rellena este campo.",
        email: "Por favor, escribe una dirección de correo válida",
        url: "Por favor, escribe una URL válida.",
        date: "Por favor, escribe una fecha válida.",
        dateISO: "Por favor, escribe una fecha (ISO) válida.",
        number: "Por favor, escribe un número entero válido.",
        digits: "Por favor, escribe sólo dígitos.",
        creditcard: "Por favor, escribe un número de tarjeta válido.",
        equalTo: "Las contraseñas no coinciden.",
        accept: "Por favor, escribe un valor con una extensión aceptada.",
        maxlength: jQuery.validator.format("Por favor, no escribas más de {0} caracteres."),
        minlength: jQuery.validator.format("Por favor, no escribas menos de {0} caracteres."),
        rangelength: jQuery.validator.format("Por favor, escribe un valor entre {0} y {1} caracteres."),
        range: jQuery.validator.format("Por favor, escribe un valor entre {0} y {1}."),
        max: jQuery.validator.format("Por favor, escribe un valor menor o igual a {0}."),
        min: jQuery.validator.format("Por favor, escribe un valor mayor o igual a {0}.")
    });
