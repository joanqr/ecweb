    $("#btnUpdate").on("click", function () {

        debugger;
        if ($("#divRadios input[name='cambiarContraseña']").is(':checked')) {
            var str = $('#NewPass').val()
            
            if (!str.match(/^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])([a-zA-Z0-9]{8,12})$/)) {
                alert("La contraseña debe de contener al menos un carácter en mayúsculas, uno en minúsculas, un número y debe de medir por lo menos 8 caracteres y máximo 12.");
                return false;
            }
        }

        

        $("#example").validate({
            rules: {
                pass2: {
                    required:true,
                    minlength: 6
                },
                pass3: {
                    required:true,
                    equalTo: "#NewPass"
                }

            },
            messages: {
                SelectName: { valueNotEquals: "Selecciona una opción por favor." }
            },
            submitHandler: function () {
                $.ajax({
                    contentType: "application/json; charset=utf-8",
                    type: "POST",
                    url: "@Url.Action("UpdateUsuario", "Security")",
                    data: JSON.stringify({ usuario: '@Request.Cookies["Nombre"].Value.ToString()', password: $("#pass").val(), newPAss: $('#NewPass').val(), cNombres: $('#cNombres').val(), cApePat: $('#cApePat').val(), cApeMat: $('#cApeMat').val(), cCorreo: $('#cEMail').val()  }),
                    success: function (data) {
                        @*setTimeout(() => { $('#MyModalXyz').modal('show'); }, 3000);
                        $('#mensaje').text(data);*@
                        alert(data);
                        if (!data.startsWith("(E1) "))
                           window.location.href = "@Url.Action("AccountStatement", "AccountStatement")";
                    }
                });
            }
        });
    });
</script>
